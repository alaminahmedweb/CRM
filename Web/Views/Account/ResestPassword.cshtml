@model Web.ViewModels.Manage.ChangePasswordVM

@{
    ViewData["Title"] = "ResestPassword";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 offset-3">
            <div class="card">
                <div class="card-body">
                    <form asp-action="ResestPassword" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h4 class="text-center">Change Password</h4>
                        <hr />
                        <div class="col-12">
                            <div class="form-floating">
                                <input class="form-control" asp-for="UserName" placeholder="User Name" />
                                <label for="UserName">Role Name</label>
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input class="form-control" asp-for="OldPassword" placeholder="Old Password" />
                                <label for="OldPassword">Old Password</label>
                            </div>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input class="form-control" asp-for="NewPassword" placeholder="New Password" />
                                <label for="NewPassword">New Password</label>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                <label for="ConfirmPassword">Confirm Password</label>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Change" class="btn btn-primary ml-1" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

