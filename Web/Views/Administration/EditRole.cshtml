@using Web.ViewModels.Administration
@model EditRoleVM

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-2 ml-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <button asp-action="ListRoles" class="btn btn-primary">Cancel</button>
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if(Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at this moment</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary">Add/Remove User</a>
        </div>
    </div>
</form>

