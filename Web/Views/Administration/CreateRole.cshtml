@model Web.ViewModels.Administration.RoleVM

@{
    ViewData["Title"] = "Create Role";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 offset-3">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateRole" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h4 class="text-center">Create Role</h4>
                        <hr />
                        <div class="col-12">
                            <div class="form-floating">
                                <input class="form-control" asp-for="RoleName" placeholder="Role Name" />
                                <label for="RoleName">Role Name</label>
                            </div>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary ml-1" />
                            <a asp-action="ListRoles" class="btn btn-primary text-white" style="width:90px;color:black">List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

