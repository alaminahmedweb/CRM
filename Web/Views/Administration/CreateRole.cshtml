@model Web.ViewModels.Administration.RoleVM

@{
    ViewData["Title"] = "Create Role";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" class="mt-3 ml-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Role Name</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ListRoles" class="btn btn-primary" style="width:90px;color:black">List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
