@using ApplicationCore.DtoModels;
@model IEnumerable<AllCustomerListDto>
@{
    Layout = "_Report";
    var total = 0;
}

<div style="overflow-x: auto;">
    <div class="table customTable">
        <table>
            <thead>
                <tr>
                    <th>Phone No</th>
                    <th>Customer Name</th>
                    <th>Address</th>
                    <th>Area</th>
                    <th>Sub Area</th>
                    <th>Employee Name</th>
                    <th>Contact</th>
                    <th>Category</th>
                    <th>Reference</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    {
                        total = total + 1;
                    }

                    <tr>
                        <td>@data.MobileNo</td>
                        <td>@data.CustomerName</td>
                        <td>@data.Address</td>
                        <td>@data.AreaName</td>
                        <td>@data.SubAreaName</td>
                        <td>@data.EmployeeName</td>
                        <td>@data.ContactName </td>
                        <td>@data.CategoryName </td>
                        <td>@data.ReferenceBy </td>
                        <td>@data.Status</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Total</td>
                    <td>@total</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
