@model ContactBy
@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "Update Contact";
    var userid="";
    if (User.Identity.IsAuthenticated)
    {
       userid  = userManager.GetUserId(User);
    }
}


<div class="row">
    <div class="col-lg-4 col-md-3 col-sm-3 col-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-6 col-8">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-3 text-center">Update Contact</h4>
                <hr />
                <form asp-action="Update" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ModifiedBy" value="@userid" />

                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" asp-for="Name" placeholder="Contact Name" />
                            <label for="Name">Contact Name</label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="form-floating">
                            <select asp-for="Status" class="form-control">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                            <label for="Status">Status</label>
                        </div>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-3">
                        <div class="d-grid gap-2 d-md-block">
                            <button type="submit" class="btn btn-primary btn-lg">Update</button>
                            <a class="btn btn-primary btn-lg" asp-action="Index">List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


