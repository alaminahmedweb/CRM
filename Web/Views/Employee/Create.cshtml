@model Employee
@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "Create Employee";
    var userid = "";
    if (User.Identity.IsAuthenticated)
    {
        userid = userManager.GetUserId(User);
    }
}


<div class="row">
    <div class="col-lg-4 col-md-3 col-sm-3 col-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-6 col-8">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-3 text-center">Add New Employee</h4>
                <hr />
                <form asp-action="Create" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ModifiedBy" value="@userid" />

                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" asp-for="Name" placeholder="Employee Name" />
                            <label for="Name">Employee Name</label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="form-group">
                            @Html.CheckBoxFor(m=>m.isMpo)
                            <label asp-for="isMpo" class="control-label col-4">Is Mpo?</label>
                        </div>
                        <span asp-validation-for="isMpo" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="form-floating">
                            <select asp-for="Status" class="form-control">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                            <label for="Status">Status</label>
                        </div>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-3">
                        <div class="d-grid gap-2 d-md-block">
                            <button type="submit" class="btn btn-primary btn-lg">Save</button>
                            <a class="btn btn-primary btn-lg" asp-action="Index">List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

