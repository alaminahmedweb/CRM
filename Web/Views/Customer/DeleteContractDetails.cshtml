@model ApplicationCore.Entities.ContractDetails

@{
    ViewData["Title"] = "Delete Contract Details";
}

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <form asp-action="DeleteContractDetails">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MobileNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MobileNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DesignationId)
            </dt>
            <dd class="col-sm-2">
                <select asp-for="DesignationId" class="form-control" disabled>
                    @foreach (var data in @ViewBag.DesignationList)
                    {
                        <option value="@data.Id">@data.Name</option>
                    }
                </select>
            </dd>
            <input type="hidden" asp-for="CustomerId" />
        </dl>

        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
