@model ContractDetails

@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "Add New Contract Details Information";
    var userid = "";
    if (User.Identity.IsAuthenticated)
    {
        userid = userManager.GetUserId(User);
    }
}
<div class="row">
    <div class="col-lg-4 col-md-3 col-sm-3 col-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-6 col-8">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-3 text-center">Add New Contract</h4>
                <hr />
                <form asp-action="AddNewContractDetails" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ModifiedBy" value="@userid" />
                    <input type="hidden" asp-for="CustomerId" />

                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" asp-for="Name" placeholder="Name" />
                            <label for="Name">Name</label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-12 mt-3">
                        <div class="form-floating">
                            <select asp-for="DesignationId" class="form-control">
                                <option value="-1">Select Designation</option>
                                @foreach (var data in @ViewBag.DesignationList)
                                {
                                    <option value="@data.Id">@data.Name</option>
                                }
                            </select>
                            <label for="DesignationId">DesignationId</label>
                        </div>
                        <span asp-validation-for="DesignationId" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" asp-for="MobileNo" placeholder="Mobile No" />
                            <label for="MobileNo">Mobile No</label>
                        </div>
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-3">
                        <div class="d-grid gap-2 d-md-block">
                            <button type="submit" class="btn btn-primary btn-lg">Save</button>
                            @*<a class="btn btn-primary btn-lg" asp-controller="Customer" asp-action="UpdateCustomerDetails" asp-route-customerId="@ViewBag.CustomerId">Back</a>*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

