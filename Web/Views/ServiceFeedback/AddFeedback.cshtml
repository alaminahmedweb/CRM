@model ApplicationCore.DtoModels.ServiceFeedbackDto
@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "AddFeedback";
    var userid = "";
    if (User.Identity.IsAuthenticated)
    {
        userid = userManager.GetUserId(User);
    }

}


<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-12 bg-white">
        <h5 class="text-center  text-bg-secondary pb-2 pt-1">Customer Information</h5>
        <div class="table-responsive">
            <table class="table table-user-information">
                <tbody>
                    <tr>
                        <td>
                            Name
                        </td>
                        <td class="text-primary">
                            @Model.CustomerName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Location
                        </td>
                        <td class="text-primary">
                            @Model.Address
                        </td>
                    </tr>
                    <tr>
                        <td>
                            City
                        </td>
                        <td class="text-primary">
                            @Model.CityName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Area
                        </td>
                        <td class="text-primary">
                            @Model.AreaName
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Sub Area
                        </td>
                        <td class="text-primary">
                            @Model.SubAreaName
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-12 bg-white">
        <h5 class="text-center  text-bg-secondary pb-2 pt-1">Booking Information</h5>
        <div class="table-responsive">
            <table class="table table-user-information">
                <tbody>
                    <tr>
                        <td>
                            Booking Date
                        </td>
                        <td class="text-primary">
                            @Model.BookingDate
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Team Leader
                        </td>
                        <td class="text-primary">
                            @Model.TeamLeaderName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Team Name
                        </td>
                        <td class="text-primary">
                            @Model.TeamName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Shift Name
                        </td>
                        <td class="text-primary">
                            @Model.ShiftName
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Amount
                        </td>
                        <td class="text-primary">
                            @Model.Amount
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row bg-white">
    <form asp-action="AddFeedback" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger" id="validationSummary"></div>
        <input asp-for="BookingId" hidden />
        <input type="hidden" asp-for="ModifiedBy" value="@userid" />


        <h4 style="font-family:Verdana;margin-left:-10px;font-size: 18px;" class="mt-5">Add Feedback</h4>
        <div class="form-group row mt-2 ml-1 mr-1">
            <div class="col-lg-2 col-md-6 col-sm-6 col-12">
                <div class="form-floating">
                    <input class="form-control" asp-for="EntryDateTime" placeholder="Entry Date" />
                    <label for="EntryDateTime">Feedback Entry Date</label>
                </div>
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-6 col-12">
                <div class="form-floating">
                    <input class="form-control" asp-for="CustomerFeedback" placeholder="Customer Feedback" />
                    <label for="CustomerFeedback">Customer Feedback</label>
                </div>
                <span asp-validation-for="CustomerFeedback" class="text-danger"></span>
            </div>

            <div class="col-lg-5 col-md-6 col-sm-6 col-12">
                <div class="form-floating">
                    <input class="form-control" asp-for="CompanyFeedback" placeholder="Company Feedback" />
                    <label for="CompanyFeedback">Company Feedback</label>
                </div>
                <span asp-validation-for="CompanyFeedback" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

